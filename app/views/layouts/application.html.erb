<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio | Roberthood</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag 'favicon.ico' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if signed_in? %>

    <style>
form {
    width: 1000px;
    margin: auto;
    margin-top: 250px;
}

</style>


    <div class='container-1'>

      <div class='box-1'>
        <a href='<%=users_url%>'><%= image_tag('logos/roberthood_black_feather.jpg', width: '25px') %></a></div>
      <div>

      <div class='box-2'>
        <i class="fas fa-search"></i>
        <input type='submit' name='submit' class='search' value='Search' /> 
      </div>

      <div class='box-3'>
          <a class='menu-item' href='#'>Free Stocks</a>
          <a class='menu-item' href='#'>Portfolio</a>
          <a class='menu-item' href='#'>Cash</a>
          <a class='menu-item' href='#'>Messages</a>
          <a class='menu-item' href='#'>Account</a>
      </div> 

    </div>
   
<form action=<%= session_url %> method='post'%>
  <input 
    type='hidden'
    name='_method'
    value='delete'>
  <input 
    type='hidden'
    name='authenticity_token'
    value='<%= form_authenticity_token %>'>
  <input 
    type='submit' value='Sign Out'>
</form>
    <% end %>
    <%= yield %>
  </body>
</html>
